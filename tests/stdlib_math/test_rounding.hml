// Test math module rounding functions

import * as math from "@stdlib/math";

// Test floor
assert(math.floor(3.7) == 3.0, "floor(3.7) should be 3");
assert(math.floor(3.2) == 3.0, "floor(3.2) should be 3");
assert(math.floor(-2.3) == -3.0, "floor(-2.3) should be -3");
assert(math.floor(5.0) == 5.0, "floor(5.0) should be 5");

// Test ceil
assert(math.ceil(3.2) == 4.0, "ceil(3.2) should be 4");
assert(math.ceil(3.7) == 4.0, "ceil(3.7) should be 4");
assert(math.ceil(-2.3) == -2.0, "ceil(-2.3) should be -2");
assert(math.ceil(5.0) == 5.0, "ceil(5.0) should be 5");

// Test round
assert(math.round(3.2) == 3.0, "round(3.2) should be 3");
assert(math.round(3.7) == 4.0, "round(3.7) should be 4");
assert(math.round(3.5) == 4.0, "round(3.5) should be 4");
assert(math.round(-2.3) == -2.0, "round(-2.3) should be -2");
assert(math.round(-2.7) == -3.0, "round(-2.7) should be -3");
assert(math.round(5.0) == 5.0, "round(5.0) should be 5");

// Test trunc
assert(math.trunc(3.7) == 3.0, "trunc(3.7) should be 3");
assert(math.trunc(3.2) == 3.0, "trunc(3.2) should be 3");
assert(math.trunc(-2.7) == -2.0, "trunc(-2.7) should be -2");
assert(math.trunc(-2.2) == -2.0, "trunc(-2.2) should be -2");
assert(math.trunc(5.0) == 5.0, "trunc(5.0) should be 5");

print("All rounding function tests passed!");
