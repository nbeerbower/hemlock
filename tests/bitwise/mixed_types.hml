// Test: Bitwise operations with mixed types
// Expect: 8
// Expect: 15
// Expect: 14
// Expect: 2
// Expect: 6
// Expect: 254

// i32 promoted from smaller types
let a: i8 = 12;
let b: i16 = 10;
print(a & b);  // Both promoted to i16, result: 8

// u8 and u16 mix
let c: u8 = 15;
let d: u16 = 7;
print(c | d);  // Both promoted to u16, result: 15... wait that's not 14
// Let me recalculate: 15 | 7 = 15
// To get 14 I need different values
let e: u8 = 12;
let f: u16 = 10;
print(e | f);  // 12 | 10 = 14

// i32 and u8 mix
let g: i32 = 6;
let h: u8 = 4;
print(g ^ h);  // 6 ^ 4 = 2... that's not 6
// Let me recalculate: 6 = 110, 4 = 100, 6 ^ 4 = 010 = 2
// To get 6: 2 ^ 4 = 6
let i: i32 = 2;
let j: u8 = 4;
print(i ^ j);  // 2 ^ 4 = 6

// Bitwise NOT preserves type
let k: u8 = 1;
print(~k);  // ~1 in u8 = 254
