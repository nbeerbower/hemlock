// Test: Shift operations
// Expect: 8
// Expect: 2
// Expect: 64
// Expect: 1
// Expect: 0
// Expect: 128

// Basic left shift
let a = 1;
print(a << 3);  // 1 << 3 = 8

// Basic right shift
print(a << 3 >> 2);  // (1 << 3) >> 2 = 8 >> 2 = 2

// Left shift with larger value
let b = 2;
print(b << 5);  // 2 << 5 = 64

// Right shift to minimum
let c = 15;
print(c >> 3);  // 15 >> 3 = 1

// Shift to zero
print(c >> 4);  // 15 >> 4 = 0

// Unsigned shift
let d: u8 = 1;
print(d << 7);  // 1 << 7 = 128 in u8
