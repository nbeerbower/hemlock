{
  "name": "Hemlock",
  "scopeName": "source.hemlock",
  "fileTypes": ["hml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#runes" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#builtins" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.hemlock",
          "match": "//.*$"
        },
        {
          "name": "comment.block.hemlock",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hemlock",
          "match": "\\b(if|else|while|for|return|break|continue|switch|case|default)\\b"
        },
        {
          "name": "keyword.control.async.hemlock",
          "match": "\\b(async|await|spawn|join|detach)\\b"
        },
        {
          "name": "keyword.control.exception.hemlock",
          "match": "\\b(try|catch|finally|throw|panic)\\b"
        },
        {
          "name": "keyword.control.defer.hemlock",
          "match": "\\b(defer)\\b"
        },
        {
          "name": "keyword.control.import.hemlock",
          "match": "\\b(import|from)\\b"
        },
        {
          "name": "storage.type.function.hemlock",
          "match": "\\b(fn)\\b"
        },
        {
          "name": "storage.type.hemlock",
          "match": "\\b(let|define)\\b"
        },
        {
          "name": "variable.language.hemlock",
          "match": "\\b(self|args)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.numeric.hemlock",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        },
        {
          "name": "storage.type.primitive.hemlock",
          "match": "\\b(bool|string|rune|ptr|buffer|array|object|void|null)\\b"
        },
        {
          "name": "storage.type.alias.hemlock",
          "match": "\\b(integer|number|byte)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.hemlock",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "constant.language.signal.hemlock",
          "match": "\\b(SIGINT|SIGTERM|SIGQUIT|SIGHUP|SIGABRT|SIGUSR1|SIGUSR2|SIGALRM|SIGCHLD|SIGCONT|SIGSTOP|SIGTSTP|SIGPIPE|SIGTTIN|SIGTTOU)\\b"
        },
        {
          "name": "constant.language.math.hemlock",
          "match": "\\b(PI|E|TAU|INF|NAN)\\b"
        },
        {
          "name": "constant.language.regex.hemlock",
          "match": "\\b(REG_ICASE)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hemlock",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hemlock",
              "match": "\\\\(n|t|r|\\\\|\"|'|0|u\\{[0-9a-fA-F]{1,6}\\})"
            },
            {
              "name": "invalid.illegal.escape.hemlock",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "runes": {
      "patterns": [
        {
          "name": "string.quoted.single.hemlock",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.hemlock",
              "match": "\\\\(n|t|r|\\\\|\"|'|0|u\\{[0-9a-fA-F]{1,6}\\})"
            },
            {
              "name": "invalid.illegal.escape.hemlock",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.hemlock",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.hemlock",
          "match": "\\b[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.hex.hemlock",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.hemlock",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.octal.hemlock",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.hemlock",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.hemlock",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.hemlock",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.hemlock",
          "match": "&|\\||\\^|<<|>>|~"
        },
        {
          "name": "keyword.operator.assignment.hemlock",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.hemlock",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.hemlock",
          "match": "\\b(print|typeof|alloc|free|memset|memcpy|realloc|buffer|channel|signal|raise|open|exec|panic|assert)\\b"
        },
        {
          "name": "support.function.async.hemlock",
          "match": "\\b(spawn|join|detach)\\b"
        }
      ]
    }
  }
}
